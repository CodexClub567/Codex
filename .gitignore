# ------------------------------
# Sensitive Files
# ------------------------------

# Prevent sensitive configuration files from being versioned.
wp-config.php
.htaccess
.env
.key
.pem

# ------------------------------
# wp-content Directory
# ------------------------------

# Ignore uploads directory as it contains user-uploaded files.
wp-content/uploads/

# Ignore caching files and backup plugins.
wp-content/cache/
wp-content/backup- .zip
wp-content/advanced-cache.php
wp-content/wp-cache-config.php

# Ignore debug and log files.
wp-content/debug.log
wp-content/*.log

# Ignore specific plugins (if not developed by you).
wp-content/plugins/hello.php
wp-content/plugins/akismet/

# Include only custom plugins/themes.
!wp-content/plugins/ai-tools/
!wp-content/themes/codex-theme/

# ------------------------------
# Node.js and Composer Dependencies
# ------------------------------

# Ignore Node.js modules and Composer dependencies (if used for theme/plugin development).
node_modules/
vendor/

# ------------------------------
# IDE and System Files
# ------------------------------

# Ignore files generated by operating systems or development tools.
.DS_Store
Thumbs.db
.idea/
.vscode/
*.bak
*.swp

# ------------------------------
# Log and Temporary Files
# ------------------------------

# Ignore system-generated log and temporary files.
*.log
*.tmp
*.lock

# ------------------------------
# Git and Version Control
# ------------------------------

# Ignore Git itself.
.git/
*.orig
*.diff
*.patch

# ------------------------------
# Build Files
# ------------------------------

# Ignore build artifacts (if applicable).
dist/
build/
*.min.js
*.min.css
